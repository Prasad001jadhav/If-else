#include<stdio.h>
#include<conio.h>
int main ()
{
	int no = 0;
	printf("\n enter a number = ");
	scanf("%d",&no);
	
	if(no == 0)
	{
		printf("\n %d is neutral.",no);
	}
	else if(no % 2 == 0)
	{
		printf("\n your no %d is even.",no);
	}
	else
	{
		printf("\n your no %d is odd.",no);
	}
	
	printf("\n\nThanks");
	
	getch ();
	return 0;
}