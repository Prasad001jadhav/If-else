#include<stdio.h>
#include<conio.h>
int main ()
{
	int no= 0;
	
	printf("enter a positive number to cheak wheather is even or odd  = ");
	scanf("%d",&no);
	
	if(no >= 0)
	{
		printf("\n invalid input.");
	    return -1;
	}
	
	if(no % 2 == 0)
	{
	 	printf("\n %d is even.",no);
	}
	else
	{
	 	printf("\n %d is odd.",no);
	}
	
	printf("\nThanks");
	
	getch();
	return 0;
}
	 	
	